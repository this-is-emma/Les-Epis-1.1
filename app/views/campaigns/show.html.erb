<article class="p-3 mt-2">
    <div class="card text-center m-3 p-4">
        <h1><%= @campaign.name %></h1>
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Active</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="#">More</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <p class="card-text"><%= @campaign.description %></p>
            <div>
                <h3>Pledges</h3>
                <% @campaign.pledges.each do |pledge| %>
                   <p><%= pledge.user_id %>: $<%= pledge.amount %></p>
                <% end %>
                <% if user_signed_in? %>
                 <%= link_to "Pledge!", new_pledge_path, class: "btn btn-primary"%>
                <% else %>
                    <%= link_to "Sign in to create a pledge!", new_user_session_path, class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
    <%= render 'shared/admin_dashboard'%>
</article>

