<div class=" m-3 p-4" styles="width: 100%; height: 80%;">
  <div class=" d-flex flex-row justify-content-between">
    <% @campaigns.each do |campaign| %>
      <div class="card mt-4" style="width: 30%; height: 20%;">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1604782206219-3b9576575203?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=697&q=80" alt="Card image cap">
        <div class="card-body">
            <%= link_to "#{campaign.name}", campaign_path(campaign.id) %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="digg_pagination">
    <%= will_paginate @campaigns, previous_label: 'Previous', next_label: 'Next'%>
  </div>
<%= render "shared/all_pledges" %>
</div>
