<div class="card m-3 p-4">
    <p>Edit <strong><%= @campaign.name%></strong></p>
    <%= form_with(model: @campaign) do |f| %>
        <% if @campaign.errors.any? %>
            <div class="alert alert-warning">
                <h2><%= pluralize(@campaign.errors.count, "error")%>, unable to update this campaign because </h2>
                <ul>
                    <% @campaign.errors.each do |e| %>
                        <p><%= e.full_message %></p>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div class="field">
            <%= f.label :description %>
            <%= f.text_field :description %>
        </div>

        <div class="actions">
            <%= f.submit %>
        </div>
    <% end %>
    <%= link_to "Back", campaigns_path %>
</div>
